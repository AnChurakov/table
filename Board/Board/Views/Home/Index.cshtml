@model IEnumerable<Board.Models.Category>

<div class="row">
    @foreach (var category in Model)
    {
    <div class="col-md-4 col-lg-4 col-xs-12">
        <div class="card" style="width: 18rem; margin-top:50px;">
            <div class="card-body">
                <h3 class="card-title text-center">@category.Name</h3>
            <a href="#" class="btn btn-primary btn-lg d-flex justify-content-center">Нашел</a>
            <a href="#" class="btn btn-danger btn-lg d-flex justify-content-center">Ищу</a>
            </div>
        </div>

    </div>
    }
</div>
