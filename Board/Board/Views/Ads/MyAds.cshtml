@model IEnumerable<Board.Models.Ads>
@{
    ViewBag.Title = "Мои объявления";
}
<div class="d-lg-flex justify-content-between align-items-center py-4 text-center">
    @Html.ActionLink("Добавить объявление", "AddAds", "Ads", null, new { @class = "btn btn-success advert__btn" })
</div>
<h2>Мои объявления</h2>
<div class="row">
    <div class="table-responsive-sm table-responsive-md">
        <table class="table table-borderless">
          <thead>
              <tr>
                  <th scope="col">Название</th>
                  <th scope="col">Дата</th>
                  <th scope="col">Редактирование</th>
                  <th scope="col">Удаление</th>
              </tr>
          </thead>
            <tbody>
                @foreach (var ads in Model)
                {
                    string name = ads.Name;
                    <tr>
                        <td>@Html.ActionLink(name, "SelectAds", "Ads", new {id = ads.Id, adstrans = ads.Transliteration, catTrans = ads.Categorys.Transliteration}, null)</td>
                        <td>@ads.DateCreation.Value.Day.@ads.DateCreation.Value.Month.@ads.DateCreation.Value.Year</td>
                        <td>@Html.ActionLink("Редактировать", "Edit", "Ads", new { id = ads.Id}, new { @class = "btn btn-warning"} )</td>
                        <td>@Html.ActionLink("Удалить","Delete", "Ads", new {url = Request.Url.AbsoluteUri,id = ads.Id}, new { @class = "btn btn-danger"})</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
