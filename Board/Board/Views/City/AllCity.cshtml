@model IEnumerable<Board.Models.City>

<h2>Все города</h2>

<div class="row">
<div class="col-md-6 col-lg-6 col-xs-12">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Название категории</th>
                <th scope="col">Удаление</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var city in Model)
            {
                <tr>
                    <td>@city.Name</td>
                    <td>@Html.ActionLink("Удалить", "Delete", "City", new { id = city.Id }, new { @class = "btn btn-danger" })</td>
                </tr>
            }
        </tbody>
    </table>
</div>
</div>