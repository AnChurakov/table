@model IEnumerable<Board.Models.Category>
@{ 
    Layout = "~/Views/Shared/_AdminPanel.cshtml";
}
<h2>Все категории</h2>

<div class="row">
    <div class="col-md-6 col-lg-6 col-xs-12">
        <table class="table table">
            <thead>
                <tr>
                    <th scope="col">Название категории</th>
                    <th scope="col">Редактирование</th>
                    <th scope="col">Удаление</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model.OrderBy(a => a.Name))
                {
                <tr>
                    <td>@category.Name</td>
                    <td>@Html.ActionLink("Редактировать", "Edit", "Category", new { id = category.Id }, new { @class = "btn btn-warning" })</td>
                    <td>@Html.ActionLink("Удалить", "Delete", "Category", new { id = category.Id }, new { @class = "btn btn-danger" })</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>