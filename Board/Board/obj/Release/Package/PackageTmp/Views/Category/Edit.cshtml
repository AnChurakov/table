@model Board.Models.Category
@{
    Layout = "~/Views/Shared/_AdminPanel.cshtml";
}

@if (TempData["Flag"] == "Success")
{
    <div class="alert alert-success col-xs-12 col-lg-6 col-md-6" role="alert">
        Категория успешно изменена
    </div>
}

@if (TempData["Flag"] == "Fail")
{
    <div class="alert alert-danger col-xs-12 col-lg-6 col-md-6" role="alert">
        Категория не изменена!
    </div>
}

@if (TempData["Danger"] == "Danger")
{
    <div class="alert alert-danger col-xs-12 col-lg-6 col-md-6" role="alert">
        Категория с таким названием уже существует!
    </div>
}

<h2>Редактирование категории</h2>

<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("Edit", "Category", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Name, new { @class = "col-md-6 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Изменить" class="btn btn-success" />
                    </div>
                </div>

            }
        </section>
    </div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}