@model Board.Models.AddPhoneNumberViewModel
@{
    ViewBag.Title = "Изменение номера телефона";
}

<div class="col-xs-12 col-lg-6 col-md-6">
    @if (TempData["Flag"] == "Success")
    {
        <div class="alert alert-success" role="alert">
            Номер телефона успешно изменен
        </div>
    }

    @if (TempData["Flag"] == "Fail")
    {
        <div class="alert alert-danger" role="alert">
            Номер телефона не изменен
        </div>
    }
</div>


<div class="col-xs-12 col-lg-12 col-md-12">
    <h2>@ViewBag.Title</h2>
    @Html.ActionLink("Личные данные", "Index", "Manage", null, new { @class = "btn btn-warning" })
    @Html.ActionLink("Смена пароль", "ChangePassword", "Manage", null, new { @class = "btn btn-warning" })
    @Html.ActionLink("Мои объявления", "MyAds", "Ads", null, new { @class = "btn btn-warning" })
    @Html.ActionLink("Добавить объявление", "AddAds", "Ads", null, new { @class = "btn btn-success" })
</div>

<div class="col-xs-12 col-lg-6 col-md-6">
@using (Html.BeginForm("UpdatePhoneUser", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <label>Введите номер (11 цифр)</label>
        <input type="tel" class="form-control" placeholder="Текущий: @ViewBag.PhoneNumber" maxlength="11" required name="Number" pattern="[0-9]{11}" />
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-success" value="Подтвердить" />
    </div>
}
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
