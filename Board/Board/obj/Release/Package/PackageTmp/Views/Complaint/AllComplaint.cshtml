@model IEnumerable<Board.Models.Complaint>
@{
    Layout = "~/Views/Shared/_AdminPanel.cshtml";
    ViewBag.Title = "Список жалоб на объявления";
}
<div class="col-xs-12 col-lg-12 col-md-12">
        <h2>Жалобы на объявления</h2>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Название</th>
                    <th scope="col">Пользователь</th>
                    <th scope="col">Удаление</th>
                </tr>
            </thead>
            <tbody>
               @foreach (var complaint in Model)
               {
                   var nameAds = complaint.Ads.Name.ToString();

                    <tr>                        
                        <td>@Html.ActionLink(nameAds, "SelectAds", "Ads", new { id = complaint.Ads.Id })</td>
                        <td>@complaint.Ads.User.UserName @Html.ActionLink("Заблокировать", "Delete", "Manage", new { id = complaint.Ads.User.Id}, new { @class = "btn btn-danger"})</td>
                        <td>@Html.ActionLink("Удалить", "Delete", "Ads", new { url = Request.Url.AbsoluteUri, id = complaint.Ads.Id }, new { @class = "btn btn-danger" })</td>                        
                    </tr>             
                  
               }
            </tbody>
        </table>
 
</div>
